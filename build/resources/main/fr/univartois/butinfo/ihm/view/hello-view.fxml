<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns:fx="http://javafx.com/fxml" alignment="CENTER" spacing="20.0"
      fx:controller="fr.univartois.butinfo.ihm.fourinaline.controller.HelloController"
      styleClass="main-container"
      stylesheets="@style.css">

    <padding>
        <Insets top="20.0" right="20.0" bottom="20.0" left="20.0" />
    </padding>

    <!-- Label pour afficher les messages du jeu -->
    <Label fx:id="messageLabel" text="Le joueur avec les jetons jaunes commence !"
           styleClass="game-message" />

    <!-- Grille de jeu pour le Puissance 4 -->
    <GridPane fx:id="gridPane" alignment="CENTER"
              styleClass="game-grid" />

    <!-- Bouton pour commencer une nouvelle partie -->
    <Button text="Nouvelle Partie" onAction="#handleNewGame"
            styleClass="new-game-button" />
</VBox>